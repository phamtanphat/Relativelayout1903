<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFBE6F"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:background="#f20"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:text="1"
        android:textSize="40sp"
        android:id="@+id/textviewView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/textviewView1"
        android:layout_below="@id/textviewView1"
        android:background="#4ED877"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:text="2"
        android:textSize="40sp"
        android:id="@+id/textviewView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/textviewView2"
        android:layout_below="@id/textviewView2"
        android:background="#CCBE70"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:text="3"
        android:textSize="40sp"
        android:id="@+id/textviewView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/textviewView3"
        android:layout_below="@id/textviewView3"
        android:background="#8155AC"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:text="4"
        android:textSize="40sp"
        android:id="@+id/textviewView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toLeftOf="@id/textviewView4"
        android:layout_below="@id/textviewView4"
        android:background="#58564F"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:text="5"
        android:textSize="40sp"
        android:id="@+id/textviewView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toLeftOf="@id/textviewView5"
        android:layout_below="@id/textviewView5"
        android:background="#99FFDB"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:text="6"
        android:textSize="40sp"
        android:id="@+id/textviewView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toLeftOf="@id/textviewView6"
        android:layout_below="@id/textviewView6"
        android:background="#0D5F57"
        android:paddingVertical="10dp"
        android:paddingHorizontal="40dp"
        android:text="7"
        android:textSize="40sp"
        android:id="@+id/textviewView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>